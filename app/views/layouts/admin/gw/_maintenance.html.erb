<% if maintenance = recent_maintenance() %>
<div id="maintenanceMessage">
  <div class="title">
    <%= link_to maintenance.title, '#', onclick: 'return toggleMaintenance();' %>
    <span>（<%=l maintenance.published_at if maintenance.published_at %>）</span>
  </div>
  <div id="maintenanceMessageBody" class="message" style = "display:none;"><%=raw maintenance.body %></div>
</div>
<%= javascript_tag do %>
function toggleMaintenance() {
  var elm = $('maintenanceMessageBody');
  if (elm.style.display == "block") {
    elm.style.display = "none";
  } else {
    elm.style.display = "block";
  }
  return false;
}
<% end %>
<% end %>
