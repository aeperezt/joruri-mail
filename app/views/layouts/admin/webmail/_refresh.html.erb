<div id="refresh_notice" class="notice" style="display: none;"><p>画面を更新しています...</p></div>

<script type="text/javascript">
//<![CDATA[
$(function() {
  <%-
  uri = Addressable::URI.new(path: request.path,
                             query_values: request.query_parameters.present? ? request.query_parameters.except(:reload) : nil).to_s
  -%>
  var baseUrl = '<%=raw escape_javascript uri.to_s %>';
  setInterval(function() {
    $('#refresh_notice').show();
    document.location.href = baseUrl;
  }, <%= interval.to_i*60*1000 %>);
});
//]]>
</script>
