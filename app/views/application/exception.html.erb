<div style="padding: 15px 20px; color: #e00; font-weight: bold; line-height: 1.8;">
  エラーが発生しました。<br />
  <%=raw @exception.message %> &lt;<%= @exception.class.name %>&gt;
</div>
<% if Rails.env != 'production' %>
  <div style="padding: 15px 20px; border-top: 1px solid #ccc; color: #800; line-height: 1.4;">
    <%=simple_format @exception.backtrace.join("\n") %>
  </div>
<% end %>
