<div id="templateContent">
<%= render 'menu' %>

<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: ;"><%= Gw::WebmailTemplate.human_attribute_name(:name) %></th>
    <th style="width: 120px; text-align: center;"><%= Gw::WebmailTemplate.human_attribute_name(:created_at) %></th>
  </tr>
  <% @items.each do |item| %>
    <tr <%= cycle '', 'class="cycle"' %>>
      <td style="text-align: center;"><%= link_to :show, url_for(item) %></td>
      <td><%= item.name %> <%= '（既定）' if item.default_flag? %></td>
      <td style="text-align: center;"><%=l item.created_at if item.created_at %></td>
    </tr>
  <% end %>
</table>

<%= paginate @items %>

</div>
