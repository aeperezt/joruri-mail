<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 100px;"><%= Sys::Tenant.human_attribute_name :code %></th>
    <th style="width: 200px;"><%= Sys::Tenant.human_attribute_name :name %></th>
    <th style="width: ;"><%= Sys::Tenant.human_attribute_name :mail_domain %></th>
    <th style="width: 100px;"><%= Sys::Tenant.human_attribute_name :mobile_access %></th>
    <th style="width: 120px; text-align: center;"><%= Sys::Tenant.human_attribute_name :updated_at %></th>
    <th style="width: 70px; text-align: right;">グループ数</th>
    <th style="width: 70px; text-align: right;">ユーザー数</th>
  </tr>
  <% @items.each do |item| %>
    <tr class="<%= cycle '', 'cycle' %>">
      <td style="text-align: center;"><%= link_to :show, url_for(item) %></td>
      <td><%= item.code %></td>
      <td><%= item.name %></td>
      <td><%= item.mail_domain %></td>
      <td><%= item.mobile_access_text %></td>
      <td style="text-align: center;"><%=l item.updated_at if item.updated_at %></td>
      <td style="text-align: right;"><%= item.groups.count %></td>
      <td style="text-align: right;"><%= item.users.count %></td>
    </tr>
  <% end %>
</table>

<%= paginate @items %>
