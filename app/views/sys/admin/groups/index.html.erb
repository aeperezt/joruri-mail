<div class="crudTree">
<div class="tree">
  <% if @parent.level_no > 0 %>
  <p>
    <%= link_to :show, sys_group_path(@parent.parent_id, @parent) %>
    <%= @parent.name %>
  </p>
  <% end %>
  <div class="links">
    <div><%= link_to :up, url_for(parent: @parent.parent_id) if @parent.level_no >= 1 %></div>
    <% @groups.each do |item| %>
    <%= link_to :show, url_for(action: :show, id: item) %>
    <%= link_to h(item.name), url_for(action: :index, parent: item) %>
    <span class="remark"><%= item.sort_no %></span><br />
    <% end %>
  </div>
</div>
<div class="content">

<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 30%;">ユーザーID</th>
    <th style="width: ;">氏名</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>
  <% @users.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to '詳細', sys_group_user_path(@parent, item) %></td>
    <td><%= item.account %></td>
    <td><%= item.name %></td>
    <td style="text-align: center;"><%= item.status.name if item.status %></td>
  </tr>
  <% end %>
</table>

</div>
<div class="footer"></div>
</div>
