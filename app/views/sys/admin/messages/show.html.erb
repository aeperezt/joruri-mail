<%=raw init_tiny_mce :readonly: true %>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.status.name if @item.status %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :published_at %></th>
    <td><%=l @item.published_at if @item.published_at %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :title %></th>
    <td><%= @item.title %></td>
  </tr><tr>
    <th colspan="2"><%= @item.class.human_attribute_name :body %></th>
  </tr><tr>
    <td colspan="2"><%= text_area_tag 'body', @item.body, class: 'mceEditor', style: 'width:100%' %></td>
  </tr>
</table>
