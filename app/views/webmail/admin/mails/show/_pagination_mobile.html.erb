<% if @pagination[:prev_uid] %>
  <%= link_to '<<*前へ', { id: @pagination[:prev_uid] }, accesskey: '*' %>
<% else %>
  &lt;&lt;*前へ
<% end %>
<span class="separator"> | </span> 
<% if @pagination[:next_uid] %>
  <%= link_to '次へ#>>', { id: @pagination[:next_uid] }, accesskey: '#' %>
<% else %>
  次へ#&gt;&gt;
<% end %>
